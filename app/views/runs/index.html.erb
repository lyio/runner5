<p id="notice"><%= notice %></p>

<h1>Runs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Resting pulse</th>
      <th>Weight</th>
      <th>Type</th>
      <th>Pace</th>
      <th>Heartrate</th>
      <th>Duration</th>
      <th>Distance</th>
      <th>Weather</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.date %></td>
        <td><%= run.resting_pulse %></td>
        <td><%= run.weight %></td>
        <td><%= run.run_type %></td>
        <td><%= run.pace %></td>
        <td><%= run.heartrate %></td>
        <td><%= run.duration %></td>
        <td><%= run.distance %></td>
        <td><%= run.weather %></td>
        <td><%= run.remark %></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

