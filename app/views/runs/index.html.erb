<p id="notice"><%= notice %></p>

<h1>Runs</h1>

    <% @runs.each do |run| %>
      <div class="run-table-row">
        <div>
          <div class="run-date"><%= run.date %></div>
          <div class="run-type"><%= run.run_type %></div>
        </div>
        <div class="run-column">
          <div>
            <span><%= fa_icon "paw"%></span>
            <%= run.format_pace %>
            <span>min/km</span>
          </div>
          <div>
            <span><%= fa_icon "heartbeat" %></span>
            <%= run.heartrate %>
            <span>bpm</span>
          </div>
        </div>
        <div class="run-column">
          <div>
            <span><%= fa_icon "hourglass-half"%></span>
            <%= run.format_duration %>
          </div>
          <div>
            <span><%= fa_icon "road"%></span>
            <%= run.distance %>
            <span>km</span>
          </div>
          <div>
            <span><%= fa_icon "thermometer"%></span>
            <%= run.weather %>
            <span>Â°C</span>
          </div>
        </div>

        <div class="run-actions">
          <%= link_to run do %>
            <%= fa_icon "info-circle" %>
          <% end %>
          <%= link_to edit_run_path(run) do %>
            <%= fa_icon "pencil" %>
          <% end %>
          <%= link_to run, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <%= fa_icon "trash" %>
          <% end %>
        </div>
      </div>
    <% end %>

<br>

<%= link_to 'New Run', new_run_path %>
