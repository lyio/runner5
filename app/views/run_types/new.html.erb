<div class="new-run-type">
  <%= form_for(@run_type) do |form| %>
    <% if @run_type.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@run_type.errors.count, "error") %> prohibited this type from being saved:</h2>
        <ul>
        <% @run_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :heartrate %>
      <%= form.text_field :heartrate %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

  <%= render '_partials/run_types_list' %>
</div>
