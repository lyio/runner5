<div class="container-fluid login-form-wrapper">
  <div class="login-form">
    <div>
      <%= form_tag "/sessions" do %>
        <label> Email / Username </label>
        <%= text_field_tag "value" %>
        <%= submit_tag "Login" %>
      <% end %>
    </div>
    <div>
      <i>Do not have an account yet? <%= link_to 'Register here!', register_path %></i>
    </div>
  </div>
</div>
