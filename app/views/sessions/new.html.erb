<div class="login-form box box-info">
  <div class="box-header with-border">
    <div>
      <%= form_tag "/sessions", :html => {:class => 'form-horizontal' } do %>
        <div class="box-body">
          <div class="form-group"> 
            <label class="control-label col-sm-2"> Email / Username </label>
            <div class="input-group col-sm-5">
              <span class="input-group-addon"><i class='fa-user'/></span>
              <%= text_field_tag "value", 'Username/Email', :class => 'form-control' %>
            </div>
          </div>
          <div class="box-footer">
            <%= submit_tag 'Register', :class=> 'btn btn-info pull-left' %>
          </div>
        </div>
      <% end %>
    </div>
    <div>
      <i>Do not have an account yet? <%= link_to 'Register here!', register_path %></i>
    </div>
  </div>
</div>
